<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<GridPane alignment="CENTER" prefHeight="750.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="viewmodel.SignUpController">
    <children>
        <VBox alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <children>
                <Label text="Username" />
                <TextField fx:id="usernameField" promptText="Enter Username" />
            </children>
        </VBox>
        <VBox alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="4">
            <children>
                <Label text="Password" />
                <TextField fx:id="passwordField" promptText="Enter Password" />
            </children>
        </VBox>
        <VBox alignment="TOP_CENTER" GridPane.columnIndex="1" GridPane.rowIndex="5">
            <children>
                <Button text="Create New Account" onAction="#createNewAccount" />
                <Button text="Go Back to Login" onAction="#goBack" />
            </children>
        </VBox>
    </children>
</GridPane>
